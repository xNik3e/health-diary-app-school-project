<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="2"
            android:text="Obszar:"
            android:textAlignment="viewStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/edit_main_organ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textColor="?attr/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            tools:text="Noga" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:id="@+id/sympthom_description_layout"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            app:boxStrokeColor="?attr/colorAccent"
            app:helperText="Opis symptomów / Co dokładnie boli:">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sympthom_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:maxLines="4"
                android:minLines="2" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:id="@+id/pain_type_layout"
            android:layout_height="wrap_content"
            app:boxStrokeColor="?attr/colorAccent"
            android:layout_marginBottom="2dp"
            app:helperText="Rodzaje bólu:">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pain_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="2"
            android:text="Poziom bólu:"
            android:textAlignment="viewStart"
           />

        <TextView
            android:id="@+id/edit_pain_scale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            tools:text="Noga" />
    </LinearLayout>

</LinearLayout>